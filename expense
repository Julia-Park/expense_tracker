#! /usr/bin/env ruby

require 'pg'

db = PG.connect(dbname: "expense_tracker")

query = 'SELECT * FROM expenses'
results = db.exec(query)



results.each do |tuple|
  id = tuple['id'].rjust(3)
  amount = tuple['amount'].rjust(12)
  date = tuple['created_on'].rjust(10)
  memo = tuple['memo']
  puts "#{id} | #{date} | #{amount} | #{memo}"
end
